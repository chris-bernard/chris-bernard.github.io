---
import { formatDate } from "@/lib/util";

const { post } = Astro.props;
---

<li class="flex flex-col text-center">
  <a href={`/blog/${post.slug}`} class="text-lightModeForegroundMuted dark:text-darkModeForegroundMuted">
    <span class="flex flex-wrap justify-center text-balance text-2xl font-medium underline">
      {post.data.title}
    </span>
    <div class="mt-1 text-sm">
      {post.data.description}
    </div>
    <div class="mt-1 text-sm hidden">
      {formatDate(post.data.publicationDate)}
    </div>
  </a>
</li>
